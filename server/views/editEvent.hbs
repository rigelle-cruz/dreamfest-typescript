{{> lineUpNav}}


<h2>edit event: <span class="data">{{event.name}}</span></h2>

<form method="POST" action="/events/edit" class="form">
  <input type="hidden" name="id" value="{{event.id}}">

  <label for="name" class="label"> Event Name </label>
  <input type="text" id="name" name="name" placeholder="Event name" value="{{event.name}}">

  <label for="description" class="label"> Description </label>
  <textarea rows="5" id="description" name="description"
    placeholder="Event description">{{event.description}}</textarea>

  <label for="location" class="label"> Location </label>
  <select id="location" name="locationId">
    {{#each locations}}
    <option value="{{id}}" {{selected}}>{{name}}</option>
    {{/each}}
  </select>

  <label for="day" class="label"> Day </label>
  <select id="day" name="day">
    {{#each days}}
    <option value="{{value}}" {{selected}}>{{name}}</option>
    {{/each}}
  </select>

  <label for="time"> Time </label>
  <input type="text" id="time" name="time" placeholder="Example: 1pm - 2pm" value="{{event.time}}">

  <div></div>
  <button>Update event</button>
</form>

<form method="POST" action="/events/delete" class="form">
  <input type="hidden" name="id" value="{{event.id}}">
  <input type="hidden" name="day" value="{{event.day}}">
  <div></div>
  <button class="delete">Delete event</button>
</form>
