{{> locationsNav}}

<h2>locations:</h2>

<ul class="cards">
  {{#each locations}}
  <li class="card">
    <div class="location">
      <span class="title">{{name}}</span>
      <p class="data">{{description}}</p>
      <a href="/locations/{{id}}/edit">edit location</a>
    </div>
  </li>
  {{/each}}
</ul>